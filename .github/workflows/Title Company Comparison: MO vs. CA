            .chart-container {
                height: 350px;
            }
        }
        .nav-link {
            transition: color 0.3s, border-bottom-color 0.3s;
        }
        .nav-link:hover {
            color: #0ea5e9;
        }
        .nav-link.active {
            color: #0ea5e9;
            border-bottom-color: #0ea5e9;
        }
        .state-toggle-btn {
            transition: background-color 0.3s, color 0.3s;
        }
        .state-toggle-btn.active {
            background-color: #0ea5e9;
            color: white;
        }
