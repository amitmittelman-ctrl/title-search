    <footer class="bg-slate-800 text-white mt-12">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 text-center text-sm">
            <p>&copy; 2025 Title Co. Analytics. All data is estimated for illustrative purposes.</p>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const data = {
                bonds: {
                    labels: ['Missouri', 'California'],
                    values: [100000, 500000]
                },
                revenue: {
                    labels: ['Insurance Premiums', 'Escrow Fees', 'Closing & Other Fees'],
                    mo: [50, 30, 20],
                    ca: [65, 25, 10]
                },
                digitization: {
                    labels: ['Online Deed Records', 'Online Court Records', 'Data Plant Availability', 'eClosing Adoption', 'RON Legality & Use'],
                    mo: [7, 6, 5, 6, 8],
                    ca: [9, 8, 8, 7, 7]
                }
            };

            const colors = {
                mo: 'rgb(2, 132, 199)',
                ca: 'rgb(185, 28, 28)',
                mo_bg: 'rgba(2, 132, 199, 0.2)',
                ca_bg: 'rgba(185, 28, 28, 0.2)'
            };

            const chartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    tooltip: {
                        callbacks: {}
                    }
                },
            };

            new Chart(document.getElementById('bondChart'), {
                type: 'bar',
                data: {
                    labels: data.bonds.labels,
                    datasets: [{
                        label: 'Minimum Surety Bond ($)',
                        data: data.bonds.values,
                        backgroundColor: [colors.mo_bg, colors.ca_bg],
                        borderColor: [colors.mo, colors.ca],
                        borderWidth: 1
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': $' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('revenueChartMO'), {
                type: 'doughnut',
                data: {
                    labels: data.revenue.labels,
                    datasets: [{
                        label: 'Revenue %',
                        data: data.revenue.mo,
                        backgroundColor: ['#0ea5e9', '#38bdf8', '#7dd3fc'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    ...chartOptions,
                    plugins: {
                        ...chartOptions.plugins,
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.parsed}%`;
                                }
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('revenueChartCA'), {
                type: 'doughnut',
                data: {
                    labels: data.revenue.labels,
                    datasets: [{
                        label: 'Revenue %',
                        data: data.revenue.ca,
                        backgroundColor: ['#dc2626', '#ef4444', '#f87171'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    ...chartOptions,
                    plugins: {
                        ...chartOptions.plugins,
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.parsed}%`;
                                }
                            }
                        }
                    }
                }
            });

            new Chart(document.getElementById('digitizationChart'), {
                type: 'radar',
                data: {
                    labels: data.digitization.labels,
                    datasets: [{
                        label: 'Missouri',
                        data: data.digitization.mo,
                        fill: true,
                        backgroundColor: colors.mo_bg,
                        borderColor: colors.mo,
                        pointBackgroundColor: colors.mo,
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: colors.mo
                    }, {
                        label: 'California',
                        data: data.digitization.ca,
                        fill: true,
                        backgroundColor: colors.ca_bg,
                        borderColor: colors.ca,
                        pointBackgroundColor: colors.ca,
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: colors.ca
                    }]
                },
                options: {
                    ...chartOptions,
                    scales: {
                        r: {
                            angleLines: {
                                display: false
                            },
                            suggestedMin: 0,
                            suggestedMax: 10,
                             pointLabels: {
                                font: {
                                    size: 10
                                }
                            }
                        }
                    },
                     plugins: {
                        ...chartOptions.plugins,
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.parsed.r}/10`;
                                }
                            }
                        }
                    }
                }
            });

            const showAllBtn = document.getElementById('show-all-btn');
            const showMoBtn = document.getElementById('show-mo-btn');
            const showCaBtn = document.getElementById('show-ca-btn');
            const stateCards = document.querySelectorAll('.state-card');
            const stateGrids = document.querySelectorAll('.state-grid');
            const toggleBtns = [showAllBtn, showMoBtn, showCaBtn];

            function updateView(state) {
                toggleBtns.forEach(btn => btn.classList.remove('active'));
                if (state === 'all') showAllBtn.classList.add('active');
                if (state === 'mo') showMoBtn.classList.add('active');
                if (state === 'ca') showCaBtn.classList.add('active');

                stateGrids.forEach(grid => {
                    if (state === 'all') {
                        grid.classList.remove('md:grid-cols-1');
                        grid.classList.add('md:grid-cols-2');
                    } else {
                        grid.classList.remove('md:grid-cols-2');
                        grid.classList.add('md:grid-cols-1');
                    }
                });

                stateCards.forEach(card => {
                    if (state === 'all' || card.dataset.state === state) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            showAllBtn.addEventListener('click', () => updateView('all'));
            showMoBtn.addEventListener('click', () => updateView('mo'));
            showCaBtn.addEventListener('click', () => updateView('ca'));
            
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section[id]');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 80) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === `#${current}`) {
                        link.classList.add('active');
                    }
                });
            });

        });
    </script>
</body>
</html>
